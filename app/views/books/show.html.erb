<%= flash[:notice] %>
<div class="container">
<div class="row">
<%= render 'users/list', book: @book_new, user: @user %>
<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

<table class="table table-striped">
<thead>
<tr>
 <th><%= image_tag @user.get_profile_image(100,100) %></th>
 <th><%= link_to user_path(@user.id) do %>
       <%= @user.name %>
       <% end %>
    </th>
  <th><%= @book.title %></th>
  <th><%= @book.body %></th>

  <% if @book.user == current_user %>
  <th><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></th>
  <th>
      <%= link_to "Destroy", book_path(@book), method: :delete,class: "btn btn-danger", "data-confirm" => "Are you sure?" %></th>
  <% end %>
</tr>
</thead>
</table>
</div>
</div>
  </div>


