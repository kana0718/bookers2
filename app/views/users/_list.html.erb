
<div class="col-md-3">
<h1>User info</h1>
<%= image_tag user.get_profile_image(100,100) %>

<table class="table table-striped">
  <thead>
  <tr>
 <div><th>name</th> <th><%= user.name %></th></div>
<table class=" table-striped">
<th>introduction</th><th><%= user.introduction %></th>
</tr>
  </thead>
  </table>

</br>
<% if user == current_user %>
<%= link_to edit_user_path(current_user.id), class: "btn btn-secondary btn-block" do %><i class="fa-solid fa-user-gear"></i><% end %>
<% else %>
<%= link_to edit_user_path(user.id), class: "btn btn-secondary btn-block" do %><i class="fa-solid fa-user-gear"></i><% end %>
<% end %>

 <h2>New book</h2>
  <%= form_with model: book,url: books_path do |f| %>

  　<h4>Title</h4>
  　<%= f.text_field :title %>

  　<h4>Opinion</h4>
  　<%= f.text_area :body %>

</br>
  　<%= f.submit 'Create Book', class: "btn btn-success" %>

  <% end %>
  </div>


