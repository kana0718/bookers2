<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
<div class="col-md-3">
  <div></div>
</div>

<div class="col-md-6" >
<h1>User info</h1>

<%= form_with model: @user do |f| %>

  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Image</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
   </br>
  　<%= f.submit 'Update User', class: "btn btn-secondary" %>

<% end %>
</div>

<div class="col-md-3">
  <div></div>
</div>
</div>
</div>


